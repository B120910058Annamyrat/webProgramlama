@page
@model proje.Pages.Ucaklars.DeleteModel

@{
    ViewData["Title"] = "Uçak Sil";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h2>Uçak Sil</h2>

<h3>Uçak silmek istediğinize eminmisiz</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Uçak Adı
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ucaklar.Ad)
        </dd>
        <dt>
            Uçak Koltuk Sayısı
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ucaklar.KoltukSayisi)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Ucaklar.Id" />
        <input type="submit" value="Sil" class="btn btn-default" /> |
        <a asp-page="./Index">Geri Dön</a>
    </form>
</div>
