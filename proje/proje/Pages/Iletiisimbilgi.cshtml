@page
@model proje.Pages.Iletisim.IletiisimbilgiModel

@{
    ViewData["Title"] = "Iletişim Bilgiler";
}


<div id="fh5co-contact" class="fh5co-section-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
                <h3>İletiş Bilgiler</h3>
                <p>Çok uzakta, dağlar kelimesinin arkasında, Vokalia ve Consonantia ülkelerinden uzakta, kör metinler yaşıyor.</p>
            </div>
        </div>
        <form action="#">
            <div class="row animate-box">
                <div class="col-md-6">
                    <h3 class="section-title">Bizim Bilgiler</h3>
                    <p>Çok uzakta, dağlar kelimesinin arkasında, Vokalia ve Consonantia ülkelerinden uzakta, kör metinler yaşıyor.</p>
                    <ul class="contact-info">
                        @foreach (var item in Model.IletisimBilgileri)
                        {

                            <li><i class="icon-location-pin"></i>@item.Konum</li>
                            <li><i class="icon-phone2"></i>@item.TelNo</li>
                            <li><i class="icon-mail"></i><a href="#">@item.Eposta</a></li>
                            <li><i class="icon-globe2"></i><a href="/index">www.seferTM.com</a></li>
                        }
                    </ul>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Ad">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Eposta">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea name="" class="form-control" id="" cols="30" rows="7" placeholder="Mesaj"></textarea>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="Mesaj Gönder" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
