@page
@model proje.Pages.Ucaklars.EditModel

@{
    ViewData["Title"] = "Uçak güncelle";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";
}

<h2>Uçak güncelle</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ucaklar.Id" />
            <div class="form-group">
                <label asp-for="Ucaklar.Ad" class="control-label">Uçak Adı</label>
                <input asp-for="Ucaklar.Ad" class="form-control" />
                <span asp-validation-for="Ucaklar.Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ucaklar.KoltukSayisi" class="control-label">Koltuk Sayısı</label>
                <input asp-for="Ucaklar.KoltukSayisi" class="form-control" />
                <span asp-validation-for="Ucaklar.KoltukSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Geri dönüş</a>
</div>

