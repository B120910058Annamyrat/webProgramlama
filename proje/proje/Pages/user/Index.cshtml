@page
@model proje.Pages.ius.IndexModel


@{
    ViewData["Title"] = "Kullanicilar";
    Layout = "~/Areas/Admin/Pages/Shared/_LayoutAdmin.cshtml";

}


<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Hos Geldiniz</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-page="/Index" >Ana Sayfa</a></li>
                <li class="breadcrumb-item active"><a href="/user/Index">@ViewData["Title"]</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0 table-striped">
                            <thead>
                                <tr>
                                    <th>Ad - Soyad</th>
                                    <th>Dogum Tarih</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Kullanici Turu</th>
                                </tr>
                            </thead>
                            <tbody id="customers">
                                @foreach (var item in Model.Kullanici)
                                {
                                    <tr class="btn-reveal-trigger">
                                        <td class="py-3">
                                            <a href="#">
                                                <div class="media d-flex align-items-center">
                                                    <div class="avatar avatar-xl mr-2">
                                                        <div class="">
                                                            <img class="rounded-circle img-fluid"
                                                                 src="~/areasWWWROOT/icons/1.png" width="30" alt="" />
                                                        </div>
                                                    </div>
                                                    <div class="media-body">
                                                        <h5 class="mb-0 fs--1">@item.Ad  @item.Soyad</h5>
                                                    </div>
                                                </div>
                                            </a>
                                        </td>
                                        <td class="py-2">@item.DogumTarih.ToShortDateString().ToString()</td>

                                        <td class="py-2">
                                            <a href="mailto:@item.Email">@item.Email</a>
                                        </td>
                                        <td class="py-2"> <a href="tel:@item.TelNo">@item.TelNo</a></td>
                                        <td class="py-2">
                                            <i>
                                                @{var x = item.KullaniciTuru == 1 ? "admin" : "kullanici"; }
                                                @x
                                            </i>
                                        </td>
                                      
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

